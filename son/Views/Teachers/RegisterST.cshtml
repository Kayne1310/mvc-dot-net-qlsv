
@model son.Models.Student

@{
    ViewData["Title"] = "RegisterST";
    Layout = null;
}



<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Registration</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="fonts/material-design-iconic-font/css/material-design-iconic-font.min.css">
    <link rel="stylesheet" href="~/css/styleRegister.css">
    <meta name="robots" content="noindex, follow">
</head>
<body>
    <div class="wrapper" style="background-color: #eddab7">
        <div class="inner">
            <form asp-action="RegisterST" asp-controller="Teachers">
                <h3>Registration For Student</h3>
                <div class="form-group">
                    <div class="form-wrapper">
                        <label >Username:</label>
                        <div class="form-holder">
                            <i class="zmdi zmdi-account-o"></i>
                            <input asp-for="@Model.Username" type="text" id="username" class="form-control">
                        </div>
                    </div>
                    <div class="form-wrapper">
                        <label >Fullname:</label>
                        <div class="form-holder">
                            <i style="font-style: normal; font-size: 15px;"></i>
                            <input asp-for="@Model.Name" type="text" id="email" class="form-control">
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="form-wrapper">
                        <label >Password:</label>
                        <div class="form-holder">
                            <i class="zmdi zmdi-lock-outline"></i>
                            <input asp-for="@Model.Password" type="password" id="password" class="form-control" placeholder="********">
                        </div>
                    </div>
                    <div class="form-wrapper">
                        <label>Email:</label>
                        <div class="form-holder">
                            <i class="zmdi zmdi-lock-outline"></i>
                            <input asp-for="@Model.Email" type="text"  class="form-control">
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="form-wrapper">
                        <label >Address:</label>
                        <div class="form-holder select">    
                            <input asp-for="@Model.Address" type="text"  class="form-control">
                        </div>
                    </div>
                    <div class="form-wrapper">
                        <label >Major:</label>
                        <div class="form-holder select">
                            <select asp-for="@Model.MajorName" id="gender" class="form-control">
                                <option value="IT">IT</option>
                                <option value="Business Management">Business Management</option>
                                <option value="Graphic design">Graphic design</option>
                                <option value="Marketing">Marketing</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="form-wrapper">
                        <label >Phone:</label>
                        <div class="form-holder">
                            <input asp-for="@Model.PhoneNumber" type="text"  class="form-control">
                        </div>
                    </div>
                    <div class="form-wrapper">                     
                        <div class="form-holder">
                            <input asp-for="@Model.RoleId" value="2" type="hidden"  class="form-control" >
                        </div>
                    </div>
                </div>
                <div class="form-end">
                    <div class="checkbox">
                        <label>
                            <input type="checkbox"> I agree to the terms and conditions.
                            <span class="checkmark"></span>
                        </label>
                    </div>
                    <div class="button-holder">
                        <button type="submit">Register Now</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

</body>
</html>


